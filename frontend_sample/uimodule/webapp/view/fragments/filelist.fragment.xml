<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
    xmlns:mvc="sap.ui.core.mvc">    

	<Panel width="auto" class="sapUiResponsiveMargin">
		<headerToolbar>
			<OverflowToolbar>
				<Title text="{ListModel>title}" titleStyle="H2"/>
				<ToolbarSpacer />
			</OverflowToolbar>
		</headerToolbar>
		<content>
			<Text text="{ListModel>content}" />
		</content>
	</Panel>    

</core:FragmentDefinition>